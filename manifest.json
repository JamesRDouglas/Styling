{
	"name": "Styling",
	"short_name": "Styling",
	"description": "Styling is a simple add-on which lets you add css styles to any webpage!",
	"manifest_version": 2,
	"version": "0.4",
	"icons": {
		"128": "Styling.png"
	},
	"permissions": [
		"tabs",
		"webNavigation",
		"webRequest",
		"contextMenus",
		"storage",
		"*://*/*"
	],
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"run_at": "document_start",
			"all_frames": true,
			"js": [ "inject.js" ]
		}
	],
	"web_accessible_resources": [
		"images/128.png",
		"js/inject.js"
	],
	"browser_action": {
		"default_icon": { "128": "Styling.png" },
		"default_title": "Styling",
		"default_popup": "src/popup/popup.html"
	}
}